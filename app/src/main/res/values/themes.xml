<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MotivationAndProductivityApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">#2888BD</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">#353535</item>
        <item name="android:colorEdgeEffect">@color/background</item>

    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:width">245dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dialogCornerRadius">20dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#E6000000</item>
        <item name="android:textColorPrimary">#A60A0A0A</item>
        <item name="android:colorAccent">#0A0A0A</item>
    </style>

    <style name="LanguageAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


</resources>